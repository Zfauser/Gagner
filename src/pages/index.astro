---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Home">
	<main>
		<img src="/logo.png" alt="gagner casino logo" width="300" />
		<p class="instructions">
			This is gagner<code>(ga·nyé)</code>casino, a place where you can play games and win <i>fake</i> money!
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="./roulette"
				title="Roulette"
				body="Play european-style single zero roulette"
			/>
			<Card
				href="./blackjack"
				title="Blackjack"
				body="Play blackjack"
			/>
		</ul>
		<br>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	img {
		display: block;
		margin: 0 auto;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		color: #111;
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(#111, 12%);
		color: #111);
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
