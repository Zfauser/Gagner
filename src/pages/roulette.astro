---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import BettingTable  from '../components/BettingTable.astro';
---
<style>
    main {
        margin: auto;
		padding: 2rem;
		max-width: 60ch;
        max-height: 60ch;
        text-align: center;
    }
    h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0;
    }
</style>

<Layout title="Roulette">
    <Header url=${currentUrl} />
    <main>
        <BettingTable />
        <br>
        <hr>
        <img src="/zachfausersignature.png" alt="Zach Fauser's Signature" width="200">
        <br>
        <a style="text-align: center; font-size: 10px;  bottom: 0;" >Not a real gambling website</a>
    </main>
</Layout>